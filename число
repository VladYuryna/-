using System;

class GuessNumber
{
    static void Main()
    {
        Random random = new Random();
        string number = "";
        for (int i = 0; i < 6; i++)
            number += random.Next(0, 10); // –≤–∏–ø–∞–¥–∫–æ–≤–µ 6-–∑–Ω–∞—á–Ω–µ —á–∏—Å–ª–æ

        char[] guessed = new string('_', number.Length).ToCharArray();
        int attempts = 5;
        bool isGuessed = false;

        Console.WriteLine("üéÆ –ì–†–ê: –í–≥–∞–¥–∞–π —á–∏—Å–ª–æ!");
        Console.WriteLine($"–ß–∏—Å–ª–æ –º–∞—î {number.Length} —Ü–∏—Ñ—Ä: {new string(guessed)}");

        while (attempts > 0 && !isGuessed)
        {
            Console.Write("\n–í–≤–µ–¥—ñ—Ç—å —Ü–∏—Ñ—Ä—É: ");
            char guess = Console.ReadKey().KeyChar;
            Console.WriteLine();

            bool correct = false;
            for (int i = 0; i < number.Length; i++)
            {
                if (number[i] == guess)
                {
                    guessed[i] = guess;
                    correct = true;
                }
            }

            if (correct)
            {
                Console.WriteLine($"‚úÖ –Ñ —Ç–∞–∫–∞ —Ü–∏—Ñ—Ä–∞! {new string(guessed)}");
            }
            else
            {
                attempts--;
                Console.WriteLine($"‚ùå –¢–∞–∫–æ—ó —Ü–∏—Ñ—Ä–∏ –Ω–µ–º–∞—î! –ó–∞–ª–∏—à–∏–ª–æ—Å—å —Å–ø—Ä–æ–±: {attempts}");
            }

            if (new string(guessed) == number)
                isGuessed = true;
        }

        if (isGuessed)
            Console.WriteLine($"\nüéâ –í—ñ—Ç–∞—î–º–æ! –í–∏ –≤–≥–∞–¥–∞–ª–∏ —á–∏—Å–ª–æ: {number}");
        else
            Console.WriteLine($"\nüò¢ –í–∏ –ø—Ä–æ–≥—Ä–∞–ª–∏! –ó–∞–≥–∞–¥–∞–Ω–µ —á–∏—Å–ª–æ: {number}");
    }
}
